<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HistoryActivity"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="开始时间："
             />

        <EditText
            android:id="@+id/S_time"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="2021-09-01 00:00:00"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="结束时间："
            android:layout_marginLeft="10dp" />

        <EditText
            android:id="@+id/E_time"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="2021-10-13 23:59:59"
            android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/history_temperature"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="20px"
            android:text="历史温度"
            android:textSize="17sp" />

        <Button
            android:id="@+id/history_humidity"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="历史湿度"
            android:textSize="17sp"
            android:paddingLeft="20px"
            />
        <Button
            android:id="@+id/history_illumination"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="历史光照"
            android:textSize="17sp"
            android:paddingLeft="20px"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/pstastic"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_gravity="center"
            android:layout_weight="0.8" />


    </LinearLayout>

</LinearLayout>