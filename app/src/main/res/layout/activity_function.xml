<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <Button
            android:id="@+id/get_id"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:text="获取ID"
            android:textSize="22sp"
            />

        <EditText
            android:id="@+id/show_id"
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:text="310656"
            android:textSize="24sp"
            android:textColor="#716B6B"/>
        <Button
            android:id="@+id/get_status"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:text="状态"
            android:textSize="22sp"
            />

        <TextView
            android:id="@+id/show_status"
            android:layout_width="115dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="离线"
            android:gravity="center"
            android:textSize="24sp"

            android:textColor="#757272"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:text="温度"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/show_temperature"
            android:layout_width="115dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:textSize="22sp"
            android:gravity="center"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/get_temperature"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:text="获取温度"
            android:textSize="22sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:text="湿度"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/show_humidity"
            android:layout_width="115dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:textSize="22dp"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/get_humidity"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:text="获取湿度"
            android:textSize="22sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:text="光照"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/show_illuminance"
            android:layout_width="115dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:textSize="22dp"
            android:gravity="center"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/get_illuminance"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:text="获取光照"
            android:textSize="22sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <Button
            android:id="@+id/history_number"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="37dp"
            android:text="历史记录"
            android:textSize="22sp"
            />

        <Button
            android:id="@+id/diagram"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="35dp"
            android:text="形成图形"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:text="温度阈值:"
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:textSize="22dp" />

        <TextView
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="阈值1"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/Min_T"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="20"
            android:textSize="24sp"
            android:textColor="#716B6B"/>
        <TextView
            android:text="--"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="22dp" />
        <TextView
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="阈值2"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/Max_T"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="30"
            android:textSize="24sp"
            android:textColor="#716B6B"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:text="光照阈值:"
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:textSize="22dp" />

        <TextView
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="最小值"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/Min_L"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="05"
            android:textSize="24sp"
            android:textColor="#716B6B"/>
        <TextView
            android:text="--"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="22dp" />
        <TextView
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="最大值"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/Max_L"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="40"
            android:textSize="24sp"
            android:textColor="#716B6B"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:text="风扇1"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="22dp" />

        <Button
            android:id="@+id/fan_open"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="12dp"
            android:text="开"
            android:textSize="22sp"
            />

        <Button
            android:id="@+id/fan_close"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="2dp"
            android:text="关"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:text="风扇2"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="22dp" />

        <Button
            android:id="@+id/fan_open2"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="12dp"
            android:text="开"
            android:textSize="22sp"
            />

        <Button
            android:id="@+id/fan_close2"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="2dp"
            android:text="关"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:text="电机"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="22dp" />

        <Button
            android:id="@+id/electrical_foreward"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="12dp"
            android:text="正转"
            android:textSize="22sp"
            />
        <Button
            android:id="@+id/electrical_inversion"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="12dp"
            android:text="反转"
            android:textSize="22sp"
            />

        <Button
            android:id="@+id/electrical_close"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="37dp"
            android:text="关闭"
            android:textSize="22sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:text="灯"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="22dp" />

        <Button
            android:id="@+id/light_open"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="12dp"
            android:text="开"
            android:textSize="22sp"
            />

        <Button
            android:id="@+id/light_close"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="37dp"
            android:text="关"
            android:textSize="22sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            android:text="自动模式"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:textSize="22dp" />

        <Button
            android:id="@+id/automatic_open"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:text="开"
            android:textSize="22sp"
            />

        <Button
            android:id="@+id/automatic_close"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="37dp"
            android:text="关"
            android:textSize="22sp"
            />
    </LinearLayout>


</LinearLayout>